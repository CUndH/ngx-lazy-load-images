{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "paths": {
    "@angular/*": ["../node_modules/@angular/*"]
  },
  "typeRoots": [
    "../../node_modules/@types"
  ],
  "types": [
    "angular"
  ]
}
